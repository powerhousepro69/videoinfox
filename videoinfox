      i=$((i+1))

      echo " To bypass the "$vto" sec. wait for next video start:  press enter with no entry"
      echo
      echo -e "\033[5m "$vto" sec. timer running . . .\033m\033[0m\033[5m\033[5m\033[0m"      
      echo 
      read -t "$vto" -p " To Quit: press spacebar then press enter . . ." playdir
           
           # option te escape loop everytime ffplay closes               # read will timeout for 5 seconds    
           if [[ $playdir ]]                                             
             then                                                        # if no input is entered within 5 seconds the next video will play
                 break                                                   # if enter is pressed without any input the next video will play
             else                                                        
                 :                                                       # press any key then enter within 5 seconds to quit Play PLAYLIST
           fi
done

