   then
        read < $HOME/.config/videoinfox/playlists/"$setplaylist".last-autoplay resumedisplay

        if [ -z "$resumedisplay" ]
          then
              #echo
              #echo
              #echo " Run Start first to enable this feature . . ."
              #sleep 1.9
