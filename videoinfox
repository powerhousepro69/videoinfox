    echo
    echo " No quotations needed for paths with spaces. Case sensative."
    echo
    read -r -p " Enter Directory or paste from clipboard: " specifydir5  # waiting fot user input - the directory you want to chang to
	
	     if [ -z "$specifydir5" ]  # if no input was entered goto  <then>
            then
                echo
                echo " error: Nothing was entered"
            else

