if [ -z "$linenumber" ]
then # BLANK ENTRY
    :
else

re='^[0-9]+$'
if ! [[ $linenumber =~ $re ]]
  then
      :
  else

if [ "$linenumber" = 0 ]
  then
      :
  else

if ! [[ "$linenumber" -eq "$linenumber" ]]
  then
      :
  else
      if [[ $linenumber -gt $linecount ]]
