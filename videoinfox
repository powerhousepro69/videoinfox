          if ! [[ "$linenumber" -eq "$linenumber" ]] #2> /dev/null
            then
                :

            else

                if [ -z "$linenumber" ] # IF NO ENTRY GOTO THEN
                  then
                      :

                  else

                      re='^[0-9]+$'
                      if ! [[ $linenumber =~ $re ]]
                      then
                      :
                      else

                      if [ "$linenumber" = 0 ]
                        then
                            :

                        else

                            if [[ $linenumber -gt $linecount ]]
                              then
                                  echo
                                  echo "Number out of range . . ."
                                  sleep .4

                              else

                                  if [ -z "$linenumber" ]
                                    then
                                        :

                                    else

                                         if [ -z "$linenumber2" ] # IF NO ENTRY GOTO THEN
                                           then
                                               :

                                                else
                                                    re='^[0-9]+$'
                                                    if ! [[ $linenumber2 =~ $re ]]
                                                      then
                                                          :
                                                      else

