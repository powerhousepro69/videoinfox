k) # RESTORE

function dplrestore {

find -maxdepth 1 -type f -iname *.nfo-res | sort -u | cut -c 4- | sed 's/.nfo-res//' > ~/.config/videoinfox/tmp/videoinfox.dl-res
linecount=$(find -maxdepth 1 -type f -iname *.nfo-res | wc -l)

sed '/./=' ~/.config/videoinfox/tmp/videoinfox.dl-res | sed '/./N; s/\n/ /' > ~/.config/videoinfox/tmp/videoinfox.dl-res-number 2>/dev/null

clear

if [ "$linecount" = 0 ]
then
echo
echo "Nothing to restore . . ."
else
cat ~/.config/videoinfox/tmp/videoinfox.dl-res-number
fi

echo "_________________________________________________________________________________________________________________"
echo
echo " ""$der"" >>> DOWNLOAD CHANNEL >>> RESTORE"
echo "_________________________________________________________________________________________________________________"
echo
echo " j - Restore     d - Delete     c - Clear Restore     a - Clear All                                      q -Quit"
echo
echo -en " Enter Option: "
read -r -n1 option
}

while true
do
dplrestore
case $option in

q)
break
;;


j) # restore
clear
cat ~/.config/videoinfox/tmp/videoinfox.dl-res-number
echo
read -r -p "Restore URL Playlist: " linenumber  # waiting fot user input

if [ -z "$linenumber" ]
then # BLANK ENTRY
    :
else

re='^[0-9]+$'
if ! [[ $linenumber =~ $re ]]
  then
      :
  else

if [ "$linenumber" = 0 ]
  then
      :
  else

if ! [[ "$linenumber" -eq "$linenumber" ]]
  then
      :
  else
      if [[ $linenumber -gt $linecount ]]
        then  # ENTRY EXCEEDS TOTAL NUMBER OF LINES
            :
else
chname=$(sed -n "$linenumber"p ~/.config/videoinfox/tmp/videoinfox.dl-res) #sed read line number
namematch=$(cat ~/.config/videoinfox/tmp/videoinfox.dl-playlist-names | grep -i -h "$chname")

if [ -z "$namematch" ]  # If there is an exisitng file don't overwrite #***
then
read -r chk4slasho < ."$chname".nfo-res
chk4slash=$(echo "$chk4slasho" | cut -c1-1)
linktoinsert=$(sed -nr '/.config/ p' ."$chname".nfo-res)
echo "$linktoinsert" >> ~/.config/videoinfox/videoinfox.dl-playlist
mv ."$chname".nfo-res ."$chname".nfo 2>/dev/null
mv ."$chname".pl-res ."$chname".pl 2>/dev/null
mv ."$chname".ch-res "$chname".ch 2>/dev/null

else
echo
echo "There is a matching entry in download channel. Restore will not overwrite . . ."
echo "That entry needs to be deleted before this playlist can be restored."
echo
read -r -p "Press enter to continue . . ."

fi
fi
fi
fi
fi
fi
;;


