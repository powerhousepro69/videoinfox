                                                                echo "Number out of range . . ."
                                                                sleep .4
                                                            else
                                                                # MOVE LINE
                                                                ex ~/.config/videoinfox/videoinfo.playlist <<<""$linenumber"m"$linenumber2"|wq"
                                                                echo
                                                                echo "Line moved . . ."
                                                            #read -r activeplaylistm < ~/.config/videoinfox/videoinfo.playlist.current # GET CURRENT PLAYLIST
