;; 
      
        d)  # DELETE QUEUE LIST  (PLAYLIST QUEUE)
        function menudelq {
   
        clear
        echo
        echo " Delete Playlist Queue?"
        echo
        echo " y - Yes     n - No"  
        echo 
        echo -en " Enter Option: "
        read -r -n1 optiondelq
        echo
        }

        while true
        do
	  menudelq
	  case $optiondelq in

	  y)  # YES
         
        read -r qempty < ~/.config/videoinfox/videoinfox-playlist.queue
        
