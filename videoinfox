rm *.ch 2>/dev/null
rm .*.nfo 2>/dev/null
rm .*.pl 2>/dev/null
rm .*.res 2>/dev/null

echo
echo " All URL Playlists Deleted . . ."
echo
sleep 1
break;;

n)  # NO
echo
echo " All URL Playlists Saved . . ."
echo
sleep 1
break;;

*)

esac
done
;;


