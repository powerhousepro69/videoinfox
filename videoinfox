sleep .7

else
cat ~/.config/videoinfox/tmp/videoinfox.dl-playlist-names-number
echo
read -r -p "Browse URL Playlist: " linenumber  # waiting fot user input

if [ -z "$linenumber" ]
then # BLANK ENTRY
    :
else

re='^[0-9]+$'
if ! [[ $linenumber =~ $re ]]
  then
      :
  else

if [ "$linenumber" = 0 ]
  then
      :
  else

if ! [[ "$linenumber" -eq "$linenumber" ]]
  then
      :
  else
      if [[ $linenumber -gt $linecount ]]
        then  # ENTRY EXCEEDS TOTAL NUMBER OF LINES
            :

else
linkread=$(sed -n "$linenumber"p ~/.config/videoinfox/tmp/videoinfox.dl-playlist-links)
baseurl=$(echo "$linkread" | sed 's%/[^/]*$%%')  # remove last slash and after
chname=$(sed -n "$linenumber"p ~/.config/videoinfox/tmp/videoinfox.dl-playlist-names)
read -r direntry < ."$chname".nfo # grab first line of .*.nfo
urlfind=$(cat ~/.config/videoinfox/videoinfox.dl-site-list | grep -i -h "$baseurl")
echo "1" > ~/.config/videoinfox/tmp/download-browse-viewset
read -r viewset < ~/.config/videoinfox/tmp/download-browse-viewset
sed -n 'n;p' ."$chname".pl > ~/.config/videoinfox/tmp/download-browse-even # even ID
sed -n 'p;n' ."$chname".pl > ~/.config/videoinfox/tmp/download-browse-odd  # odd NAME

if [ -f "$chname".ch ]
then
cd "$direntry" 2>/dev/null

function dlbrowse {
clear
read -r viewset < ~/.config/videoinfox/tmp/download-browse-viewset
if [[ "$viewset" = 1 ]] # entire list
then
sed '/./=' ~/.config/videoinfox/tmp/download-browse-odd | sed '/./N; s/\n/ /' > ~/.config/videoinfox/tmp/download-browse-odd-numbered # NUMBER THE LIST
cat ~/.config/videoinfox/tmp/download-browse-odd-numbered
echo
echo "Directory: ""$PWD"
echo "URL Playlist: ""$chname"
echo "Url Link: ""$urlfind"
echo "View: Entire List"

elif [[ "$viewset" = 2 ]] # search results
then
sed '/./=' ~/.config/videoinfox/tmp/search-url-playlist-odd | sed '/./N; s/\n/ /' > ~/.config/videoinfox/tmp/search-url-playlist.tmp-numbered # # THE LIST
cat ~/.config/videoinfox/tmp/search-url-playlist.tmp-numbered
echo
echo "Directory: ""$PWD"
echo "URL Playlist: ""$chname"
echo "Url Link: ""$urlfind"
echo "View: Search Results"
echo "Search: ""$videofind"
fi

echo "___________________________________________________________________________________________________________________"
echo
echo " ""$der"" >>> YT-DLP MENU >>> DOWNLOAD CHANNEL >>> BROWSE"
echo "___________________________________________________________________________________________________________________"
echo
echo " t - Search            a - Add to Queue     d - Download     n - Not Downloaded                           q - Quit"
echo " c - Clear Results     b - All to Queue     z - Queue        y - Downloaded                               u - Set"
echo
echo -en " Enter Option: "
read -r -n1 option
}

while true
do
dlbrowse
case $option in

q) # Quit
break;;

c) # Clear Results
echo "1" > ~/.config/videoinfox/tmp/download-browse-viewset
;;


t) # SEARCH
wholelistcount=$(sed -n '$=' ~/.config/videoinfox/tmp/download-browse-odd-numbered) # line count
uplup=$(date +%D -r /"$dir5"/."$chname".pl)
clear
echo "___________________________________________________________________________________________________________________"
echo
echo " ""$ver2"" >>> SEARCH URL PLAYLIST                           Enter a keyword. Case ignored. No wildcard *"
echo "___________________________________________________________________________________________________________________"
echo
echo " Playlist:" "$chname"
echo " Updated: ""$uplup"
echo " Videos: ""$wholelistcount"
echo
read -r -p " Search: " videofind  # waiting fot user input - video file that you want to find

find ~/.config/videoinfox/tmp -type f -iname "download-browse-odd-numbered" | xargs -d '\n' grep -i -h "$videofind" > ~/.config/videoinfox/tmp/search-url-playlist.tmp2 2> /dev/null
sed 's/\s.*$//' ~/.config/videoinfox/tmp/search-url-playlist.tmp2 > ~/.config/videoinfox/tmp/search-url-playlist-even # line #'s from the unedited playlist
sed 's/[^ ]* //' ~/.config/videoinfox/tmp/search-url-playlist.tmp2 > ~/.config/videoinfox/tmp/search-url-playlist-odd # search results video names

    searchtotal=$(wc -l < ~/.config/videoinfox/tmp/search-url-playlist-even)

        if [ -z "$videofind" ]
          then
              echo "1" > ~/.config/videoinfox/tmp/download-browse-viewset
              echo
              echo " Nothing was entered . . ."
              echo
              sleep .4
          else                                                                                   	
              if echo "$videofind" | grep "/" > /dev/null
                then
                    echo "1" > ~/.config/videoinfox/tmp/download-browse-viewset
                    echo
                    echo " No / . . ."
                    echo
                    sleep .7
                else

                     if [ "$searchtotal" = 0 ]  # if find returned no results goto <then>
                       then
                           echo
                           echo " No videos found . . ."
                           echo "1" > ~/.config/videoinfox/tmp/download-browse-viewset
                           sleep .7
                       else
                           echo "2" > ~/.config/videoinfox/tmp/download-browse-viewset

fi
fi
fi
;;


n) # @not downloaded

#function dlbrowsend {
cp ~/.config/videoinfox/tmp/download-browse-odd ~/.config/videoinfox/tmp/download-browse-odd-not-dl
cp ~/.config/videoinfox/tmp/download-browse-even ~/.config/videoinfox/tmp/download-browse-even-not-dl
echo
echo
echo -e " Reading local URL playlist \033[5m. . .\033m\033[0m\033[5m\033[5m\033[0m"

cp ~/.config/videoinfox/tmp/download-browse-odd-not-dl ~/.config/videoinfox/tmp/download-browse-odd-not-dl2

sed -i 's/\[.*//' ~/.config/videoinfox/tmp/download-browse-odd-not-dl2  # remove [
sed -i 's/[^[:alnum:]]\+//g' ~/.config/videoinfox/tmp/download-browse-odd-not-dl2

find "$PWD" -maxdepth 1 -type f \( -iname "*.mp4" -o -iname "*.mkv" -o -iname "*.avi" -o -iname "*.webm" -o -iname "*.divx" -o -iname "*.3gp" \) > ~/.config/videoinfox/tmp/dlbrowse-file-list # Find video files.

dlbrowsecount=$(find "$PWD" -maxdepth 1 -type f \( -iname "*.mp4" -o -iname "*.mkv" -o -iname "*.avi" -o -iname "*.webm" -o -iname "*.divx" -o -iname "*.3gp" \) | wc -l) # File count

sed 's/.*\///' ~/.config/videoinfox/tmp/dlbrowse-file-list > ~/.config/videoinfox/tmp/dlbrowse-file-list.tmp 2>/dev/null # remove path
sed -i 's/\.[^.]*$//' ~/.config/videoinfox/tmp/dlbrowse-file-list.tmp # rem ext
cp ~/.config/videoinfox/tmp/dlbrowse-file-list.tmp ~/.config/videoinfox/tmp/download-browse-odd-not-dlz

sed -i 's/\[.*//' ~/.config/videoinfox/tmp/download-browse-odd-not-dlz  # remove [
sed -i 's/[^[:alnum:]]\+//g' ~/.config/videoinfox/tmp/download-browse-odd-not-dlz

#grep -Ff ~/.config/videoinfox/tmp/download-browse-odd-not-dl2 ~/.config/videoinfox/tmp/download-browse-odd-not-dlz > ~/.config/videoinfox/tmp/dlbrowse-file-list-downld.tmp2
input="$HOME"/.config/videoinfox/tmp/download-browse-odd-not-dlz
while read -r line
do
linematchnum=$(grep -n -x "$line" ~/.config/videoinfox/tmp/download-browse-odd-not-dl2 | grep -Eo '^[^:]+')
sed -i -e "${linematchnum}s/^/z18x/" ~/.config/videoinfox/tmp/download-browse-odd-not-dl 2>/dev/null
sed -i -e "${linematchnum}s/^/z18x/" ~/.config/videoinfox/tmp/download-browse-even-not-dl 2>/dev/null
done < "$input"

sed -i '/^z18x/d' ~/.config/videoinfox/tmp/download-browse-odd-not-dl # remove video names that were alrady downloaded
sed -i '/^z18x/d' ~/.config/videoinfox/tmp/download-browse-even-not-dl # remove video ids that were alrady downloaded

function dlbrowsend {
clear
sed '/./=' ~/.config/videoinfox/tmp/download-browse-odd-not-dl | sed '/./N; s/\n/ /' > ~/.config/videoinfox/tmp/download-browse-odd-not-dl.tmp # number list
cat ~/.config/videoinfox/tmp/download-browse-odd-not-dl.tmp
echo
echo "Directory: ""$PWD"
echo "URL Playlist: ""$chname"
echo "View: Not Downloaded"
echo "___________________________________________________________________________________________________________________"
echo
echo " ""$der"" >>> YT-DLP MENU >>> DOWNLOAD CHANNEL >>> BROWSE"
echo "___________________________________________________________________________________________________________________"
echo
echo " d - Download     a - Add to Queue     z - Queue                                             h - Help     q - Quit"
echo
echo -en " Enter Option: "
read -r -n1 option
}

while true
do
dlbrowsend
case $option in

q) #quit
break;;


h) # help
echo
echo
echo " To update display after any downloads, Quit then run Not Downloaded again."
echo
read -r -p " Press enter to continue . . ."
;;


d) # @Download - Not Downloaded
clear
linecount=$(sed -n '$=' ~/.config/videoinfox/tmp/download-browse-odd-not-dl) # line count
cat ~/.config/videoinfox/tmp/download-browse-odd-not-dl.tmp
echo
read -r -p "Download Video: " linenumber  # waiting fot user input

if [ -z "$linenumber" ]
then # BLANK ENTRY
    :
else

re='^[0-9]+$'
if ! [[ $linenumber =~ $re ]]
  then
      :
  else

if [ "$linenumber" = 0 ]
  then
      :
  else

if ! [[ "$linenumber" -eq "$linenumber" ]]
  then
      :
  else
      if [[ $linenumber -gt $linecount ]]
        then  # ENTRY EXCEEDS TOTAL NUMBER OF LINES
            :
else
clear
videoid=$(sed -n "$linenumber"p ~/.config/videoinfox/tmp/download-browse-even-not-dl)
~/.config/videoinfox/yt-dlp "${dlargue[@]}" "$urlfind""$videoid"
fi
fi
fi
fi
fi
;;


a) # add to browse queue in NOT DOWNLOADED
clear
linecount=$(sed -n '$=' ~/.config/videoinfox/tmp/download-browse-odd-not-dl) # line count
cat ~/.config/videoinfox/tmp/download-browse-odd-not-dl.tmp
echo
read -r -p "Add video to browse queue: " linenumber  # waiting fot user input

if [ -z "$linenumber" ]
then # BLANK ENTRY
    :
else

re='^[0-9]+$'
if ! [[ $linenumber =~ $re ]]
  then
      :
  else

if [ "$linenumber" = 0 ]
  then
      :
  else

if ! [[ "$linenumber" -eq "$linenumber" ]]
  then
      :
  else
      if [[ $linenumber -gt $linecount ]]
        then  # ENTRY EXCEEDS TOTAL NUMBER OF LINES
            :
else

videoid=$(sed -n "$linenumber"p ~/.config/videoinfox/tmp/download-browse-even-not-dl)
videoname=$(sed -n "$linenumber"p ~/.config/videoinfox/tmp/download-browse-odd-not-dl)
sed -i '/^$/d' ~/.config/videoinfox/browse-queue-dir 2>/dev/null
sed -i '/^$/d' ~/.config/videoinfox/browse-queue 2>/dev/null
sed -i '/^$/d' ~/.config/videoinfox/browse-queue-names 2>/dev/null
sed -i '/^$/d' ~/.config/videoinfox/browse-queue-names-2 2>/dev/null
echo "$PWD" >> ~/.config/videoinfox/browse-queue-dir
echo "$urlfind""$videoid" >> ~/.config/videoinfox/browse-queue
echo "$videoname" >> ~/.config/videoinfox/browse-queue-names
echo "$chname" >> ~/.config/videoinfox/browse-queue-names-2
echo
echo "$videoname"" added to the queue . . ."
sleep .5

fi
fi
fi
fi
fi
;;


z) # @browse queue
function dlbrowsequque {
clear
linecount=$(sed -n '$=' ~/.config/videoinfox/browse-queue) # line count

read -r chkit < ~/.config/videoinfox/browse-queue
if [ -z "$chkit" ]
then
echo "Queue empty . . ."

else
linecount2=$(sed -n '$=' ~/.config/videoinfox/browse-queue-dir) # line count
yes "~" | head -n "$linecount2" 2>/dev/null > ~/.config/videoinfox/tmp/videoinfox.browsequeue-tilde

cp ~/.config/videoinfox/browse-queue-names ~/.config/videoinfox/tmp/browse-queue-names.tmp
paste -d '  ' 2>/dev/null ~/.config/videoinfox/tmp/browse-queue-names.tmp ~/.config/videoinfox/tmp/videoinfox.browsequeue-tilde ~/.config/videoinfox/browse-queue-names-2 > ~/.config/videoinfox/tmp/browse-queue-names.tmp2
cp  ~/.config/videoinfox/tmp/browse-queue-names.tmp2 ~/.config/videoinfox/tmp/browse-queue-names.tmp3

# REMOVE DUPES
# sed remove everthing that isn't a number or letter >>> awk display video names and line numbers of dupes >>> sed remove names leaving line numbers
sed 's/[^[:alnum:]]\+//g' ~/.config/videoinfox/tmp/browse-queue-names.tmp2 | awk 'a[$1]++ {print $0, NR}' | sed 's/[^ ]* //' > ~/.config/videoinfox/tmp/browse-queue-names.dupes
read -r chkit < ~/.config/videoinfox/tmp/browse-queue-names.dupes
if [ -z "$chkit" ]
then
:

else
echo
echo -e "Removing duplicates\033[5m . . .\033m\033[0m\033[5m\033[5m\033[0m"
echo

input="$HOME"/.config/videoinfox/tmp/browse-queue-names.dupes
while read -r line # MARK DUPLICATE LINES
do
sed -i -e "${line}s/^/z18xvi/" ~/.config/videoinfox/tmp/browse-queue-names.tmp3
sed -i -e "${line}s/^/z18xvi/" ~/.config/videoinfox/browse-queue 2>/dev/null
sed -i -e "${line}s/^/z18xvi/" ~/.config/videoinfox/browse-queue-dir 2>/dev/null
sed -i -e "${line}s/^/z18xvi/" ~/.config/videoinfox/browse-queue-names 2>/dev/null
sed -i -e "${line}s/^/z18xvi/" ~/.config/videoinfox/browse-queue-names-2 2>/dev/null
sed -i -e "${line}s/^/z18xvi/" ~/.config/videoinfox/tmp/videoinfox.browsequeue-tilde 2>/dev/null
done < "$input"
# REMOVE MARKED LINES
sed -i '/^z18xvi/d' ~/.config/videoinfox/tmp/browse-queue-names.tmp3
sed -i '/^z18xvi/d' ~/.config/videoinfox/browse-queue 2>/dev/null
sed -i '/^z18xvi/d' ~/.config/videoinfox/browse-queue-dir 2>/dev/null
sed -i '/^z18xvi/d' ~/.config/videoinfox/browse-queue-names 2>/dev/null
sed -i '/^z18xvi/d' ~/.config/videoinfox/browse-queue-names-2 2>/dev/null
sed -i '/^z18xvi/d' ~/.config/videoinfox/tmp/videoinfox.browsequeue-tilde 2>/dev/null
fi

sed '/./=' ~/.config/videoinfox/tmp/browse-queue-names.tmp3 | sed '/./N; s/\n/ /' > ~/.config/videoinfox/tmp/browse-queue-names.tmp2 2>/dev/null # #THE LIST
clear
cat ~/.config/videoinfox/tmp/browse-queue-names.tmp2
fi
echo "___________________________________________________________________________________________________________________"
echo
echo " ""$der"" >>> YT-DLP MENU >>> DOWNLOAD CHANNEL >>> BROWSE QUEUE"
echo "___________________________________________________________________________________________________________________"
echo
echo " d - Download Queue     r - Remove     c - Clear                                                          q - Quit"
echo
echo -en " Enter Option: "
read -r -n1 option
}

while true
do
dlbrowsequque
case $option in

q)
break;;

c) # clear browse queue
read isitempty < ~/.config/videoinfox/browse-queue
if [ -z "$isitempty" ]
then
echo
echo
echo " Browse queue empty . . . "
sleep .7

else
function cbqueue {
clear
echo
echo " Delete Browse Queue?"
echo
echo " y - Yes     n - No"
echo
echo -en " Enter Option: "
read -r -n1 option
echo
}

while true
do
cbqueue
case $option in

y)  # YES
echo > ~/.config/videoinfox/browse-queue
echo > ~/.config/videoinfox/browse-queue-dir
echo > ~/.config/videoinfox/browse-queue-names
echo > ~/.config/videoinfox/browse-queue-names-2
echo > ~/.config/videoinfox/tmp/videoinfox.browsequeue-tilde
rm ~/.config/videoinfox/tmp/browse-queue-names.tmp2 2>/dev/null
rm ~/.config/videoinfox/tmp/browse-queue-names.tmp 2>/dev/null
rm ~/.config/videoinfox/tmp/browse-queue-names.tmp3 2>/dev/null

echo
echo " Browse Queue Deleted . . ."
echo
sleep .7
break;;

n)  # NO
echo
echo " Browse Queue Saved . . ."
echo
sleep .7
break;;

*)
esac
done


fi
;;


r) # remove line browse queue
read isitempty < ~/.config/videoinfox/browse-queue
if [ -z "$isitempty" ]
then
echo
echo
echo " Browse queue empty . . . "
sleep .7

else
linecount=$(sed -n '$=' ~/.config/videoinfox/browse-queue) # line count
clear
cat ~/.config/videoinfox/tmp/browse-queue-names.tmp2 2>/dev/null
echo
read -r -p "Remove: " linenumber  # waiting fot user input

if [ -z "$linenumber" ]
then # BLANK ENTRY
    :
else

re='^[0-9]+$'
if ! [[ $linenumber =~ $re ]]
  then
      :
  else

if [ "$linenumber" = 0 ]
  then
      :
  else

if ! [[ "$linenumber" -eq "$linenumber" ]]
  then
      :
  else
      if [[ $linenumber -gt $linecount ]]
        then  # ENTRY EXCEEDS TOTAL NUMBER OF LINES
            echo
            echo "Number out of range . . ."
            sleep .4
        else  # ENTRY IS A VALID NUMBER
            function bquerem {
            linewithnum=$(sed -n "$linenumber"p ~/.config/videoinfox/tmp/browse-queue-names.tmp2)
            videoname2=$(echo "$linewithnum" | sed 's/[^ ]* //')
            clear
            echo
            echo "Remove: ""$videoname2""?"
            echo
            echo "y - Yes     n - No"
            echo
            echo -en "Enter Option: "
            read -r -n1 option
            echo
            }

            while true
            do
	      bquerem
	      case $option in

            y)  # YES
            sed -i "${linenumber}d" ~/.config/videoinfox/browse-queue 2>/dev/null
            sed -i "${linenumber}d" ~/.config/videoinfox/browse-queue-dir 2>/dev/null
            sed -i "${linenumber}d" ~/.config/videoinfox/browse-queue-names 2>/dev/null
            sed -i "${linenumber}d" ~/.config/videoinfox/browse-queue-names-2 2>/dev/null
            sed -i "${linenumber}d" ~/.config/videoinfox/tmp/videoinfox.browsequeue-tilde 2>/dev/null

            echo
            echo "Removed . . ."
            echo
            sleep .7
            break;;

            n)  # NO
            echo
            echo "Saved . . ."
            echo
            sleep .7
            break;;

            *)

            esac
            done

fi
fi
fi
fi
fi
fi
;;


d) # @DOWNLOAD BROWSE QUEUE
read -r chkit < ~/.config/videoinfox/browse-queue
if [ -z "$chkit" ]
then
echo
echo
echo " Browse queue empty . . ."
sleep .7
else
clear
grabdir="$PWD"
paste -d ' ' 2>/dev/null ~/.config/videoinfox/browse-queue ~/.config/videoinfox/browse-queue-dir > ~/.config/videoinfox/tmp/browse-queue-final
input="$HOME"/.config/videoinfox/tmp/browse-queue-final # complete link <space> dir to download to
while read -r line
do
getdir=$(echo "$line" | sed 's/[^ ]* //')
getlink=$(echo "$line" | sed 's/\s.*$//')
cd "$getdir"
echo
echo
echo "DOWNLOAD DIRECTORY: ""$PWD"
echo
~/.config/videoinfox/yt-dlp "${dlargue[@]}" "$getlink"
done < "$input"
cd "$grabdir"
echo
echo
echo -e "\033[5mBrowse Queue Done\033m\033[0m\033[5m\033[5m\033[0m"
echo
read -r -p "Press enter to continue . . ."
fi
;;



*)
esac
done
;;



*)
esac
done
;;



h)
echo
echo
echo " When single videos are downloaded, Yt-dlp won't re-download videos that already exist in the above directory."
echo
read -r -p " Press enter to continue . . ."
;;

u) # SETTINGS
function dlburlset {
clear
linecount=$(sed -n '$=' ~/.config/videoinfox/videoinfox.dl-site-list) # line count

read -r anysites < ~/.config/videoinfox/videoinfox.dl-site-list
if [ -z "$anysites" ]
then
echo "Url list empty . . ."
else
:
fi
clear
# NUMBER THE LIST
sed '/./=' ~/.config/videoinfox/videoinfox.dl-site-list | sed '/./N; s/\n/ /' > ~/.config/videoinfox/tmp/videoinfox.dl-site-list-numbered
cat ~/.config/videoinfox/tmp/videoinfox.dl-site-list-numbered
echo
echo "Domain: ""$baseurl"
echo "___________________________________________________________________________________________________________________"
echo
echo " ""$der"" >>> DOWNLOAD CHANNEL >>> BROWSE >>> SETTINGS                          Only 1 entry per domain"
echo "___________________________________________________________________________________________________________________"
echo
echo " a - Add     r - Remove                                                                                   q - Quit"
echo
echo -en " Enter Option: "
read -r -n1 option
}

while true
do
dlburlset
case $option in

q) # quit
break;;

a) # add url for browse
clear
urlfind2=$(cat ~/.config/videoinfox/videoinfox.dl-site-list | grep -i -h "$baseurl")
if [ -z "$urlfind2" ]
then
echo
echo " Add to the following domain what is needed to download a video by id from the playlist."
echo
echo " If you are not sure what to enter, click on a video to watch and enter what is after"
echo " the .com up to but not including the video id."
echo
echo " Press enter with no entry to cancel."
echo
echo " Complete the rest of the URL . . ."
echo
read -r -p " $baseurl" option # enter url

if [ -z "$option" ]
then
echo
echo " Nothing was entered . . ."
sleep .7

else
echo "$baseurl""$option" >> ~/.config/videoinfox/videoinfox.dl-site-list
sed -i '/^$/d' ~/.config/videoinfox/videoinfox.dl-site-list 2>/dev/null #  REMOVE BLANK LINES
fi

else
echo
echo " A domain entry already exists . . ."
echo " Remove the existing entry before entering a new one."
echo
read -r -p " Press enter to continue . . ."
fi
;;


r) # remove url
clear
linecount=$(sed -n '$=' ~/.config/videoinfox/videoinfox.dl-site-list) # line count

cat ~/.config/videoinfox/tmp/videoinfox.dl-site-list-numbered
echo
read -r -p "Remove: " linenumber  # waiting fot user input

if [ -z "$linenumber" ]
then # BLANK ENTRY
    :
else

re='^[0-9]+$'
if ! [[ $linenumber =~ $re ]]
  then
      :
  else

if [ "$linenumber" = 0 ]
  then
      :
  else

if ! [[ "$linenumber" -eq "$linenumber" ]]
  then
      :
  else
      if [[ $linenumber -gt $linecount ]]
        then  # ENTRY EXCEEDS TOTAL NUMBER OF LINES
            :
else
displaylink=$(sed -n "$linenumber"p ~/.config/videoinfox/videoinfox.dl-site-list)
function remsite {
clear
echo
echo " Remove: "$displaylink"?"
echo
echo " y - Yes     n - No"
echo
echo -en " Enter Option: "
read -r -n1 option
echo
}

while true
do
remsite
case $option in

y)  # YES
sed -i "${linenumber}d" ~/.config/videoinfox/videoinfox.dl-site-list 2> /dev/null
echo
echo " Entry Removed . . ."
sleep 1
break;;

n)  # NO
echo
echo " Entry Saved . . ."
sleep 1
break;;

*)

esac
done

fi
fi
fi
fi
fi
;;

*)
esac
done
;;


y) # @DOWNLOADED CONTENT - BROWSE
function dlbrowsefiles {
# Find video files.
find "$PWD" -maxdepth 1 -type f \( -iname "*.mp4" -o -iname "*.mkv" -o -iname "*.avi" -o -iname "*.webm" -o -iname "*.divx" -o -iname "*.3gp" \) > ~/.config/videoinfox/tmp/dlbrowse-file-list

linecount=$(wc -l ~/.config/videoinfox/tmp/dlbrowse-file-list 2>/dev/null | cut -d' ' -f1)

# CHECK FOR FILES
dlbrowsecount=$(find "$PWD" -maxdepth 1 -type f \( -iname "*.mp4" -o -iname "*.mkv" -o -iname "*.avi" -o -iname "*.webm" -o -iname "*.divx" -o -iname "*.3gp" \) | wc -l)

# SORT BACK INTO ORDER
sort -u ~/.config/videoinfox/tmp/dlbrowse-file-list > ~/.config/videoinfox/tmp/dlbrowse-file-list.tmp
mv ~/.config/videoinfox/tmp/dlbrowse-file-list.tmp ~/.config/videoinfox/tmp/dlbrowse-file-list

#  REMOVE BLANK LINES
sed -i '/^$/d' ~/.config/videoinfox/tmp/dlbrowse-file-list

# REMOVE PATH ONLY LEAVING FILENAME
sed 's/.*\///' ~/.config/videoinfox/tmp/dlbrowse-file-list > ~/.config/videoinfox/tmp/dlbrowse-file-list.tmp 2>/dev/null
clear
sed '/./=' ~/.config/videoinfox/tmp/dlbrowse-file-list.tmp | sed '/./N; s/\n/ /' > ~/.config/videoinfox/tmp/dlbrowse-file-list.tmp2 2>/dev/null # # THE LIST
cat ~/.config/videoinfox/tmp/dlbrowse-file-list.tmp2
echo
echo "Directory: ""$PWD"
echo "Playlist: ""$setplaylist"
echo "URL Playlist: ""$chname"
echo "View: Downloaded"
echo "___________________________________________________________________________________________________________________"
echo
echo " ""$der"" >>> YT-DLP MENU >>> DOWNLOAD CHANNEL >>> BROWSE"
echo "___________________________________________________________________________________________________________________"
echo
echo " j - Play     o - Autoplay     i - Info     k - Playlist Add                                              q - Quit"
echo
echo -en " Enter Option: "
read -r -n1 option
}

while true
do
dlbrowsefiles
case $option in

q)
break;;


i)  # INFO - DOWNLOAD PLAYLIST BROWSE DOWNLOADED

if [ "$linecount" = 0 ]
  then
      echo
      echo
      echo " No video files in the current directory . . ."
      sleep .7

  else
            if [ -f ~/.config/videoinfox/tmp/dlbrowse-file-list ]  # if file exists goto then
              then
              echo
              echo
              read -r -p " Enter line number to get info: " linenumber  # waiting fot user input

if [ "$linenumber" = 0 ]
  then
      :
  else
             # create file moving selected line number to the top
             tail -n +"$linenumber" ~/.config/videoinfox/tmp/dlbrowse-file-list > ~/.config/videoinfox/tmp/videoinfo-view-downloads-autoplay.tmp 2>/dev/null

             # read first line of file for play
             read playnumber < ~/.config/videoinfox/tmp/videoinfo-view-downloads-autoplay.tmp

                 if [ -z "$playnumber" ]
                   then
                       :

                   else
                       clear
                       echo
                       echo "$playnumber"
                       echo

echo " "$(ffprobe -v error -show_entries stream=codec_name -of default=noprint_wrappers=1:nokey=1 -select_streams v:0 -show_entries stream=width,height -of default=nw=1 "$playnumber")  " Duration:" $(ffmpeg -i "$playnumber" 2>&1 | grep Duration | cut -d ' ' -f 4 | sed s/,//)  # codec, width, height & duration

                       echo
                       read -r -p " Press enter to continue . . ."
                       #rm ~/.config/videoinfox/tmp/videoinfo-view-downloads-autoplay.tmp 2>/dev/null

                 fi
fi
        else
            :

            fi

      fi

;;


k)
##########################################################################################
###########################   ADD TO PLAYLIST  k  Download Playlist Browse DOWNLOADED
##########################################################################################

# REMOVE EVERYTHING FROM THE BEGINNING OF THE LINE UP TO AND INCLUDING THE DOT). LEAVING ONLY PLAYLIST NAME
cat ~/.config/videoinfox/videoinfo.playlist.current | sed 's/.*\.//' > ~/.config/videoinfox/tmp/whatplpld.tmp
read -r whatplhome < ~/.config/videoinfox/tmp/whatplpld.tmp
rm ~/.config/videoinfox/tmp/whatplpld.tmp


if [ -f ~/.config/videoinfox/videoinfo.playlist ]  # if file exists goto then
  then
      :
  else
      echo > ~/.config/videoinfox/videoinfo.playlist
fi


if [ -f ~/.config/videoinfox/tmp/dlbrowse-file-list ]  # if file exists goto then
  then

      clear
      cat ~/.config/videoinfox/tmp/dlbrowse-file-list.tmp2 2>/dev/null
      echo
      read -r -p "Add video to playlist $whatplhome: " linenumber  # waiting fot user input

linecount=$(wc -l ~/.config/videoinfox/tmp/dlbrowse-file-list 2>/dev/null | cut -d' ' -f1)

if ! [[ "$linenumber" -eq "$linenumber" ]] 2> /dev/null
  then
      :

  else

      if [ -z "$linenumber" ] # IF NO ENTRY GOTO THEN
        then
            :

        else

if [ "$linenumber" = 0 ]
  then
      :
  else
            if [[ $linenumber -gt $linecount ]]
              then
                  echo
                  echo "Number out of range . . ."
                  sleep .4

              else
      # create file moving selected line number to the top
      tail -n +"$linenumber" ~/.config/videoinfox/tmp/dlbrowse-file-list > ~/.config/videoinfox/tmp/videoinfo.view-pl-downloads-number.tmp 2>/dev/null

      # read first line of file for play
      read playnumber < ~/.config/videoinfox/tmp/videoinfo.view-pl-downloads-number.tmp
      if [ -z "$playnumber" ]
        then
            :
        else
     read -r hspa < ~/.config/videoinfox/playlists/"$setplaylist".last-autoplay
     if [ -z "$hspa" ]
       then  # resume marker is empty
           echo "$playnumber" >> ~/.config/videoinfox/videoinfo.playlist
           read -r activeplaylistm < ~/.config/videoinfox/videoinfo.playlist.current # GET CURRENT PLAYLIST
           cp ~/.config/videoinfox/videoinfo.playlist "$activeplaylistm" 2>/dev/null # SAVE CURRENT PLAYLIST
           echo
           echo "$playnumber"
           echo
           echo "Added to Playlist . . ."
           sleep .7
       else  # resume marker exists.
           echo "$playnumber" >> ~/.config/videoinfox/videoinfo.playlist
           read -r activeplaylistm < ~/.config/videoinfox/videoinfo.playlist.current # GET CURRENT PLAYLIST
           cp ~/.config/videoinfox/videoinfo.playlist "$activeplaylistm" 2>/dev/null # SAVE CURRENT PLAYLIST
           echo "$playnumber" >> ~/.config/videoinfox/playlists/"$setplaylist".last-autoplay # UPDATE RESUME LIST
           echo
           echo "$playnumber"
           echo
           echo "Added to Playlist . . ."
           sleep .7
fi
fi
fi
fi
fi
fi

else
    :

fi
;;


o)
########################################################################################
###########################   AUTOPLAY LINE  o  DOWNLOAD PLAYLIST Browse DOWNLOADED
########################################################################################

if [ "$istherefiles" = 0 ]
  then
      echo
      echo
      echo " No video files in the current directory . . ."
      sleep .7

  else


if [ -f ~/.config/videoinfox/tmp/dlbrowse-file-list ]  # if file exists goto then
  then
      clear
      cat ~/.config/videoinfox/tmp/dlbrowse-file-list.tmp2 2>/dev/null
echo
read -r -p "Autoplay: " linenumber  # waiting fot user input

if [ "$linenumber" = 0 ]
  then
      :
  else

tail -n +"$linenumber" ~/.config/videoinfox/tmp/dlbrowse-file-list > ~/.config/videoinfox/tmp/videoinfo-view-downloads-autoplay.tmp 2>/dev/null
input="$HOME""/.config/videoinfox/tmp/videoinfo-view-downloads-autoplay.tmp"

i=0
OLDIFS=$IFS
IFS=$'\n'

for line in $(cat "$input" 2>/dev/null)
 do
      clear
      echo
      echo "___________________________________________________________________________________________________________________"
      echo
      echo " ""$der"" >>> YT-DLP MENU >>> DOWNLOAD CHANNEL >>> VIEW DOWNLOADS >>> AUTOPLAY"
      echo
      echo " [PLAYING]>" "$line"
      echo "___________________________________________________________________________________________________________________"
      echo

      echo " "$(ffprobe -v error -show_entries stream=codec_name -of default=noprint_wrappers=1:nokey=1 -select_streams v:0 -show_entries stream=width,height -of default=nw=1 "$line")  " Duration:" $(ffmpeg -i "$line" 2>&1 | grep Duration | cut -d ' ' -f 4 | sed s/,//)  # codec, width, height and duration

      echo
      echo
      echo " Video Player Controls:"
      echo
      echo " - Fullscreen Toggle: f"
      echo
      echo " - Play/Pause Toggle: space bar"
      echo
      echo " - Back/Fwd: Left/Right Arrows (tap or hold down)"
      echo
      echo " - Quit: q"
      echo -e "\n"
      echo " This screen will quit when the video player is quit . . ."
      "$vnotify" "Videoinfox messsage: Playing . . ." "$line"
      $defplayer "${defplayargu[@]}" "$line" 2> /dev/null

i=$((i+1)) # line number of video that was playing on video end/user quit.
total="$vto" #  set intermission time in seconds
count=0  # counter
nextup=0  # line number of next video up

while [ ${count} -lt ${total} ] ; do
    nextup=$((i+1))
    tail -n +"$nextup" ~/.config/videoinfox/tmp/videoinfo-view-downloads-autoplay.tmp > ~/.config/videoinfox/tmp/videoinfo-view-downloads-autoplay.nextup.tmp 2>/dev/null
    read -r nextplay < ~/.config/videoinfox/tmp/videoinfo-view-downloads-autoplay.nextup.tmp
    tlimit=$(( $total - $count ))
    clear
    echo
    echo " Last:" "$line"
    echo
    echo " Next:" "$nextplay"
    echo "___________________________________________________________________________________________________________________"
    echo
    echo " $der >>> Intermission Timer"
    echo "___________________________________________________________________________________________________________________"
    echo
    echo " Anykey Enter - Play     Hold Enter - Speed Up Timer                                         Spacebar Enter - Quit"
    echo
    echo
    echo -e "\r Next video starting in ${tlimit} seconds . . .\c"
    echo
    echo
    read -t 1 playoption
    test ! -z "$playoption" && { break ; }
    count=$((count+1))
done

if [[ "$playoption" = " " ]] # if entry equals (spacebar enter) then break out of play loop
  then
  break
fi

done

fi

IFS=$OLDIFS

else
   :
fi

fi

;;



j)
##############################################################################
###########################   PLAY LINE  j DOWNLOAD PLAYLIST BROWSE DOWNLOADED
##############################################################################

istherefiles2=$(find "$PWD" -type f \( -iname "*.mp4" -o -iname "*.mkv" -o -iname "*.avi" -o -iname "*.webm" -o -iname "*.divx" -o -iname "*.3gp" \) | wc -l)



if [ "$isterefiles2" = 0 ]
  then
      echo
      echo
      echo " No video files in the current directory . . ."
      sleep .4

  else


if [ -f ~/.config/videoinfox/tmp/dlbrowse-file-list ]  # if file exists goto then
  then
      clear
      cat ~/.config/videoinfox/tmp/dlbrowse-file-list.tmp2 2>/dev/null
      echo
      read -r -p "Play: " linenumber  # waiting fot user input

      # create file moving selected line number to the top
      tail -n +"$linenumber" ~/.config/videoinfox/tmp/dlbrowse-file-list > ~/.config/videoinfox/tmp/videoinfo-view-pl-downloads-playnumber.tmp2 2>/dev/null

      # read first line of file for play
      read playnumber < ~/.config/videoinfox/tmp/videoinfo-view-pl-downloads-playnumber.tmp2

      if [ -z "$playnumber" ]
          then
              :

          else

if [ "$linenumber" = 0 ]
  then
      :
  else

      clear
      echo
      echo "___________________________________________________________________________________________________________________"
      echo
      echo " ""$der"" >>> YT-DLP MENU >>> DOWNLOAD CHANNEL >>> VIEW DOWNLOADS >>> PLAY"
      echo
      echo " [PLAYING]>" "$playnumber"
      echo "___________________________________________________________________________________________________________________"
      echo

      echo " "$(ffprobe -v error -show_entries stream=codec_name -of default=noprint_wrappers=1:nokey=1 -select_streams v:0 -show_entries stream=width,height -of default=nw=1 "$playnumber")  " Duration:" $(ffmpeg -i "$playnumber" 2>&1 | grep Duration | cut -d ' ' -f 4 | sed s/,//)  # codec, width, height & duration
      echo
      echo
      echo " Video Player Controls:"
      echo
      echo " - Fullscreen Toggle: f"
      echo
      echo " - Play/Pause Toggle: space bar"
      echo
      echo " - Back/Fwd: Left/Right Arrows (tap or hold down)"
      echo
      echo " - Quit: q"
      echo -e "\n"
      echo " This screen will quit when the video player is quit . . ."
      echo

      # video filename with full path <$pasteclip> strip from the bgininning of line to the last slash leaving only the filename <$getfilenameonly>
      getfilenameonly=$(echo "$playnumber" |  awk -F '/' '{print $NF}')

      "$vnotify" "Videoinfox messsage: Playing . . ." "$getfilenameonly"

      echo "$playnumber" >> ~/.config/videoinfox/videoinfo.playedlist  # write clipboard content to Played List file
      $defplayer "${defplayargu[@]}" "$playnumber" 2>/dev/null  # play video
      rm ~/.config/videoinfox/tmp/videoinfo-view-pl-downloads-playnumber.tmp 2>/dev/null

     fi
fi

else
    :

fi

fi

;;


                *)

                esac
                done

              ;;



a) # @add to browse queue

if [[ "$viewset" = 1 ]] # entire list
then
clear
