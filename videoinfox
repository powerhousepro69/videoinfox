if [[ "$whatfext" = "mp4" ]]
then
:
elif [[ "$whatfext" = "mkv" ]]
then
:
elif [[ "$whatfext" = "avi" ]]
then
:
elif [[ "$whatfext" = "webm" ]]
then
:
elif [[ "$whatfext" = "divx" ]]
then
:
elif [[ "$whatfext" = "3gp" ]]
then
:
else
echo "" | xclip -sel clip  # clearing out the clipboard
pasteclip=$(xclip -o -selection clipboard 2> /dev/null)  # grab clipboard content
fi

