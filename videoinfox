  then
      echo " Playlist Queue Empty . . ."
  else
      :
fi

echo "___________________________________________________________________________________________________________________"
echo
echo " ""$der"" >>> PLAY QUEUE"        
echo "___________________________________________________________________________________________________________________"
echo
echo " j - Play     o - Start Autoplay      z - Queue to Playlist     r - Remove Line                           q - Quit"
