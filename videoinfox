      read -r -p "End block cut: " linenumber2

      # GETTING NUMBER OF VIDEO FILES IN THE PLAYLIST
      linecount=$(wc -l ~/.config/videoinfox/tmp/videoinfo.playlist-apa 2> /dev/null | cut -d' ' -f1) #

          if ! [[ "$linenumber" -eq "$linenumber" ]] #2> /dev/null
            then
                :

            else

