if ! [[ $linenumber =~ $re ]]
  then
      :
  else

if [ "$linenumber" = 0 ]
  then
      :
  else

if ! [[ "$linenumber" -eq "$linenumber" ]]
  then
      :
  else
      if [[ $linenumber -gt $linecount ]]
        then  # ENTRY EXCEEDS TOTAL NUMBER OF LINES
            :
else

if [ -z "$urlfind" ]
then
clear
echo
