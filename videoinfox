      echo " - Quit: q"      
      echo -e "\n"

      $defplayer "${defplayargu[@]}" "$line" 2> /dev/null

      ###### COUNTER TO KEEP TRACK OF LINE NUMBER THAT IS CURRENTLY PLAYING FOR WRITE ON EXIT.
      i=$((i+1))

      echo " To bypass the "$vto" sec. wait for next video start:  press enter with no entry"
      echo
      echo -e "\033[5m "$vto" sec. timer running . . .\033m\033[0m\033[5m\033[5m\033[0m"      
      echo 
      read -t "$vto" -p " To Quit: press spacebar then press enter . . ." playdir
           
           # option te escape loop everytime ffplay closes               # read will timeout for 5 seconds    
           if [[ $playdir ]]                                             
             then                                                        # if no input is entered within 5 seconds the next video will play
                 break                                                   # if enter is pressed without any input the next video will play
             else                                                        
                 :                                                       # press any key then enter within 5 seconds to quit Play PLAYLIST
           fi
done

tail -n +"$i" ~/.config/videoinfox/playlists/"$setplaylist".last-autoplay > ~/.config/videoinfox/playlists/pl-tmp
mv ~/.config/videoinfox/playlists/pl-tmp ~/.config/videoinfox/playlists/"$setplaylist".last-autoplay

IFS=$OLDIFS

fi

   else
       echo
       echo
       echo " Playlist Empty . . ."
       sleep 1.7

fi
;;

      
        j) # PLAY LINE  (HOME >>> PLAYLIST)

if [ -f ~/.config/videoinfox/tmp/videoinfo.number.play-list ]
   then

echo
echo
read -r -p " Play Line: " linenumber  # waiting fot user input

tail -n +"$linenumber" ~/.config/videoinfox/tmp/videoinfo.playlist-apa > ~/.config/videoinfox/tmp/videoinfo.playlist-apa.tmp 2>/dev/null
mv ~/.config/videoinfox/tmp/videoinfo.playlist-apa.tmp ~/.config/videoinfox/tmp/videoinfo.playlist-apa 2>/dev/null

