        if [ -f ~/.config/videoinfox/playlists/playlist.queue ]
        then
        :
        else
        echo > ~/.config/videoinfox/playlists/playlist.queue
        fi
        
        read -r qempty < ~/.config/videoinfox/playlists/playlist.queue
        clear
