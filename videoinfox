function menuy {

read -r dlargue 2>/dev/null < ~/.config/videoinfox/dlargue
pasteclip=$(xclip -o -selection clipboard 2> /dev/null)  # grab clipboard content
grabclip=$(echo "$pasteclip" | cut -c-4)   # cut everything after the 4th character

if [ "$grabclip" = "http" ]  # if the first 4 characters = <http> go then
  then
      :

  else
      if [ -f "$pasteclip" ]
        then
            :
        else
            echo "$pastetemp" | xclip -sel clip  # clearing out the clipboaed
            pasteclip=$(xclip -o -selection clipboard 2> /dev/null)  # grab clipboard content
      fi
fi


read -r dirsaved < ~/.config/videoinfox/videoinfo.yt-download-dir
#######################  cd "$dirsaved"

pasteclip=$(xclip -o -selection clipboard 2> /dev/null)  # grab clipboard content

clear
echo

##################################################################################################################################################
#=================================================================================================================================================
#                           @CHECK TO SEE IF THE CLIPBOARD CONTENTS CONTAIN A URL OR A FILE AND ACT UPON THAT DISPLAY
#=================================================================================================================================================
##################################################################################################################################################

# the 2 lines of below code are creating two new variables for the following loop.
# 1st variable <$grabpaste>   <cut> is used to cut all characters after the 4th character from the variable. Only 4 chatacters are needed to look for <http>
# 2nd variable <$grabpaste2>  <cut> is used to cut all characters after the 1st character from the variable. Only 1 character is needed to look for </>

# for main if loop - to look for <http>
grabpaste=$(echo "$pasteclip" | cut -c-4)   # cut everything after the 4th character

# for nested if loop - to look for </>
grabpaste2=$(echo "$pasteclip" | cut -c-1)  # cut everything after the 1st character

# the following code checks to see if the clipbooard has a url in it by lookin for <http> from <$grabpaste>
# If it is <http>, YT-DLP will get the clipboard. yt-dlp will check if its a valid link by trying to extract the name of the video file.
# If it isn't <http>  the ytdlp loop will be skipped

if [ "$grabpaste" = "http" ]  # if the first 4 characters = <http> go then
  then
      read -r dirsaved < ~/.config/videoinfox/videoinfo.yt-download-dir 2> /dev/null  # reding default download directory
      ytdlpconfirm=$(timeout 10 ~/.config/videoinfox/yt-dlp --get-filename -o "%(title)s" "$pasteclip" 2> /dev/null)

            if [ "$ytdlpconfirm" = "" ]
                  then

                      pasteclip=$(xclip -o -selection clipboard 2> /dev/null)  # grab clipboard content
                      dash0=$(echo "-") # not blinking

                           # Videoinfox v2.00________________________________________ Videoinfox v2.00_________________________________________
                           #________________x________________________________________ _________________________________________________________
                      echo "___________________________________________________________________________________________________________________"
                      echo
                      echo " ""$der"" >>> YT-DLP MENU         Enter - Update Clipboard Display         yt-dlp Version: $ytdlpver"
                      echo "___________________________________________________________________________________________________________________"
                      echo
                      echo " r - Download Only       g - Download List        l - Last Download      p - Play Clipboard               q - Quit"
                      echo " c - Download Choose     j - Download Channel     v - View Downloads     x - Clrclp                       u - Set"
                      echo " s - Self Destruct"
                      echo

                      echo "" | xclip -sel clip  # clearing out the clipboard
                      pasteclip=$(xclip -o -selection clipboard 2> /dev/null)  # grab clipboard content


                  else

                      dash1=$(echo -e "\033[5m-\033m\033[0m\033[5m\033[5m\033[0m")
                      echo "Clipboard:" "$pasteclip"
                      echo "YT-DLP Confirmed: "$ytdlpconfirm""
                      echo "Download Directory: $dirsaved"  # dislpay default download directory
                      echo "___________________________________________________________________________________________________________________"
                      echo
                      echo " ""$der"" >>> YT-DLP MENU         Enter - Update Clipboard Display         yt-dlp Version: $ytdlpver"
                      echo "___________________________________________________________________________________________________________________"
                      echo
                      echo " r * Download Only       g - Download List        l - Last Download      p * Play Clipboard               q - Quit"
                      echo " c * Download Choose     j - Download Channel     v - View Downloads     x - Clrclp                       u - Set"
                      echo " s * Self Destruct"
                      echo
            fi
  else

      if [ -f "$pasteclip" ]  # Valid file in the clipboard
        then
            echo "Clipboard:" "$pasteclip"
            echo "___________________________________________________________________________________________________________________"
            echo
            echo " ""$der"" >>> YT-DLP MENU         Enter - Update Clipboard Display         yt-dlp Version: $ytdlpver"
            echo "___________________________________________________________________________________________________________________"
            echo
            echo " r - Download Only       g - Download List        l - Last Download      p * Play Clipboard               q - Quit"
            echo " c - Download Choose     j - Download Channel     v - View Downloads     x - Clrclp                       u - Set"
            echo " s - Self Destruct"
            echo

        else

            echo "" | xclip -sel clip  # clearing out the clipboard
            pasteclip=$(xclip -o -selection clipboard 2> /dev/null)  # grab clipboard content

            echo "___________________________________________________________________________________________________________________"
            echo
            echo " ""$der"" >>> YT-DLP MENU         Enter - Update Clipboard Display         yt-dlp Version: $ytdlpver"
            echo "___________________________________________________________________________________________________________________"
            echo
            echo " r - Download Only       g - Download List        l - Last Download      p - Play Clipboard               q - Quit"
            echo " c - Download Choose     j - Download Channel     v - View Downloads     x - Clrclp                       u - Set"
            echo " s - Self Destruct"
            echo
fi
fi

echo -en " Enter Option: "
read -r -n1 optiony

}


     while true
     do
     menuy
     case $optiony in


     q)  # QUIT
     clear
     break;;


#######################################################################
     j)  # @DOWNLOAD PLAYLIST
#######################################################################
grabdir="$PWD"
function dwnchan {
cd "$dir5"

if [ -f ~/.config/videoinfox/videoinfox.dl-playlist ]
then
:
else
echo > ~/.config/videoinfox/videoinfox.dl-playlist
fi

dlistactive=~/.config/videoinfox/videoinfox.dl-playlist # active
dlistarchive="$dir5"/.videoinfox.dl-playlist # archive

read -r check4empty < "$dlistactive"

if [ -z "$check4empty" ]
then
cp "$dlistarchive" "$dlistactive" 2>/dev/null
else
if cmp --silent -- "$dlistactive" "$dlistarchive"  # compare the active download playlist to the archive
then # files are the same
:
else # FILES ARE DIFFERENT every time an edit is made to the loaded playlist
cp "$dlistactive" "$dlistarchive" 2>/dev/null  # SAVE THE LOADED PLAYLIST
fi
fi

rm ~/.config/videoinfox/tmp/dl-download-filestotal 2>/dev/null
rm ~/.config/videoinfox/tmp/dl-download-pldate 2>/dev/null
sed -n -e 's/^.*archive //p' ~/.config/videoinfox/videoinfox.dl-playlist | cut -c 2- | sed 's/.$//' | awk 2>/dev/null -F'\'\' '{print $1}' > ~/.config/videoinfox/tmp/videoinfox.dl-playlist-names # write download playlist names

input1="$HOME"/.config/videoinfox/tmp/videoinfox.dl-playlist-names
while read -r line
do
date +%D -r ."$line".pl >> ~/.config/videoinfox/tmp/dl-download-pldate
# count from .ch file
#if [ -f "$line".ch ]
#then
#cat "$line".ch | wc -l >> ~/.config/videoinfox/tmp/dl-download-filestotal
#else
#echo "0" >> ~/.config/videoinfox/tmp/dl-download-filestotal
#fi

# count from find
read -r nfodir < ."$line".nfo
chk4slash=$(echo "$nfodir" | cut -c1-1)
if [ "$chk4slash" = "/" ]
then
cd "$nfodir"
find -maxdepth 1 -type f \( -iname "*.mp4" -o -iname "*.mkv" -o -iname "*.avi" -o -iname "*.webm" -o -iname "*.divx" -o -iname "*.3gp" \) | wc -l >> ~/.config/videoinfox/tmp/dl-download-filestotal
else
echo "0" >> ~/.config/videoinfox/tmp/dl-download-filestotal
fi
cd "$dir5"
done < "$input1"

sed -i '/^$/d' ~/.config/videoinfox/videoinfox.dl-playlist # REMOVE BLANK LINES
#sed -n -e 's/^.*.ch //p' ~/.config/videoinfox/videoinfox.dl-playlist | sed 's/-o.*//' > ~/.config/videoinfox/tmp/videoinfox.dl-playlist-links
sed -n -e 's/^.*archive //p' ~/.config/videoinfox/videoinfox.dl-playlist | cut -c 2- | sed -n -e 's/^.*archive //p' ~/.config/videoinfox/videoinfox.dl-playlist | cut -c 2- | sed 's/ -o.*//' | sed 's/[^ ]* //' | awk '$0=$NF' > ~/.config/videoinfox/tmp/videoinfox.dl-playlist-links

chklinklist=$(sed -n '$=' ~/.config/videoinfox/tmp/videoinfox.dl-playlist-links) # line count
chknamelist=$(sed -n '$=' ~/.config/videoinfox/tmp/videoinfox.dl-playlist-names) # line count
yes "~" | head -n "$chknamelist" 2>/dev/null > ~/.config/videoinfox/tmp/videoinfox.dlp-tilde
yes " " | head -n "$chknamelist" 2>/dev/null > ~/.config/videoinfox/tmp/videoinfox.dlp-space

 # UPDATE DOWNLOAD LIST LINE COUNT
input1="$HOME"/.config/videoinfox/tmp/videoinfox.dl-playlist-names # Download Playlist. Name only list
rm ~/.config/videoinfox/tmp/videoinfox.dl-playlist-plcount 2>/dev/null
while read -r line
do
chantotal=$(sed -n '$=' ."$line".pl) #
chantotalcut=$((chantotal / 2))
echo "$chantotalcut" >> ~/.config/videoinfox/tmp/videoinfox.dl-playlist-plcount
done < "$input1"

clear
read dlplaylist < ~/.config/videoinfox/videoinfox.dl-playlist
if [ -z "$dlplaylist" ]
then
echo "URL playlist empty . . ."

else # OVERHEAD DISPLAY
paste -d '  ' 2>/dev/null ~/.config/videoinfox/tmp/videoinfox.dl-playlist-names ~/.config/videoinfox/tmp/dl-download-filestotal ~/.config/videoinfox/tmp/videoinfox.dlp-tilde ~/.config/videoinfox/tmp/videoinfox.dl-playlist-plcount ~/.config/videoinfox/tmp/videoinfox.dlp-tilde ~/.config/videoinfox/tmp/dl-download-pldate > ~/.config/videoinfox/tmp/videoinfox.dl-playlist-names.display
# removed url line: ~/.config/videoinfox/tmp/videoinfox.dl-playlist-links & ~/.config/videoinfox/tmp/videoinfox.dlp-space

sed '/./=' ~/.config/videoinfox/tmp/videoinfox.dl-playlist-names.display | sed '/./N; s/\n/ /' > ~/.config/videoinfox/tmp/videoinfox.dl-playlist-names-number 2>/dev/null

linkread=$(sed -n "$linenumber"p ~/.config/videoinfox/tmp/videoinfox.dl-playlist-links 2>/dev/null)
cat ~/.config/videoinfox/tmp/videoinfox.dl-playlist-names-number 2>/dev/null
fi

echo
echo "Directory: ""$PWD"
echo "___________________________________________________________________________________________________________________"
echo
echo " ""$der"" >>> YT-DLP MENU >>> DOWNLOAD CHANNEL"
echo "___________________________________________________________________________________________________________________"
echo
echo " a - Add         d - Download     y - Update     v - View Downloads              z - Index Update         q - Quit"
echo " r - Remove      i - Info         b - Browse                                     l - Change Directory     h - Help"
echo " k - Restore     s - Delete"
echo
echo -en " Enter Option: "
read -r -n1 option
}

while true
do
dwnchan
case $option in


q)
cd "$grabdir"
echo "" | xclip -sel clip  # clearing out the clipboard
pasteclip=$(xclip -o -selection clipboard 2> /dev/null)  # grab clipboard content
break
;;


#####################################################################################
     v)  # Download Playlist VIEW DOWNLOADS
#####################################################################################

# Find video files.
find "$PWD" -type f \( -iname "*.mp4" -o -iname "*.mkv" -o -iname "*.avi" -o -iname "*.webm" -o -iname "*.divx" -o -iname "*.3gp" \) > ~/.config/videoinfox/videoinfo.view-pl-downloads

# CHECK FOR FILES to display:
istherefiles=$(find "$PWD" -type f \( -iname "*.mp4" -o -iname "*.mkv" -o -iname "*.avi" -o -iname "*.webm" -o -iname "*.divx" -o -iname "*.3gp" \) | wc -l)

# SORT BACK INTO ORDER
sort -u ~/.config/videoinfox/videoinfo.view-pl-downloads > ~/.config/videoinfox/videoinfo.view-pl-downloads.tmpz
cp ~/.config/videoinfox/videoinfo.view-pl-downloads.tmpz ~/.config/videoinfox/videoinfo.view-pl-downloads

#  REMOVE BLANK LINES
sed '/^$/d' ~/.config/videoinfox/videoinfo.view-pl-downloads > ~/.config/videoinfox/tmp/videoinfo-view-pl-downloads.tmp 2>/dev/null

# REMOVE PATH ONLY LEAVING FILENAME
sed 's/.*\///' ~/.config/videoinfox/tmp/videoinfo-view-pl-downloads.tmp > ~/.config/videoinfox/tmp/videoinfo-view-pl-downloads.tmp2 2>/dev/null

# CREATE NUMBERED lIST
sed '/./=' ~/.config/videoinfox/tmp/videoinfo-view-pl-downloads.tmp2 | sed '/./N; s/\n/ /' > ~/.config/videoinfox/tmp/videoinfo-view-pl-downloads.tmp3 2>/dev/null

function dpviewd {
clear
cat ~/.config/videoinfox/tmp/videoinfo-view-pl-downloads.tmp3  # display numbered find results
echo
echo "Directory: $dir5"  # dislpay default download directory
echo "Playlist: ""$setplaylist"
echo "___________________________________________________________________________________________________________________"
echo
echo " "$der" >>> YT-DLP MENU >>> DOWNLOAD CHANNEL >>> VIEW DOWNLOADS"
echo "___________________________________________________________________________________________________________________"
echo
echo " j - Play     o - Autoplay     i - Info     k - Playlist Add                                              q - Quit"
echo
echo -en " Enter Option: "
read -r -n1 option

}

              while true
              do
              dpviewd
	        case $option in


              q)  # QUIT
              #cd "$keepdir"
              break;;


              i)  # INFO - DOWNLOAD PLAYLIST <VIEW DOWNLOADS>


if [ "$istherefiles" = 0 ]
  then
      echo
      echo
      echo " No video files in the current directory . . ."
      sleep .7

  else
            if [ -f ~/.config/videoinfox/videoinfo.view-pl-downloads ]  # if file exists goto then
              then
              echo
              echo
              read -r -p " Enter line number to get info: " linenumber  # waiting fot user input

if [ "$linenumber" = 0 ]
  then
      :
  else
             # create file moving selected line number to the top
             tail -n +"$linenumber" ~/.config/videoinfox/videoinfo.view-pl-downloads > ~/.config/videoinfox/tmp/videoinfo-view-downloads-autoplay.tmp 2>/dev/null

             # read first line of file for play
             read playnumber < ~/.config/videoinfox/tmp/videoinfo-view-downloads-autoplay.tmp

                 if [ -z "$playnumber" ]
                   then
                       :

                   else
                       clear
                       echo
                       echo "$playnumber"
                       echo

echo " "$(ffprobe -v error -show_entries stream=codec_name -of default=noprint_wrappers=1:nokey=1 -select_streams v:0 -show_entries stream=width,height -of default=nw=1 "$playnumber")  " Duration:" $(ffmpeg -i "$playnumber" 2>&1 | grep Duration | cut -d ' ' -f 4 | sed s/,//)  # codec, width, height & duration

                       echo
                       read -r -p " Press enter to continue . . ."
                       #rm ~/.config/videoinfox/tmp/videoinfo-view-downloads-autoplay.tmp 2>/dev/null

                 fi
fi
        else
            :

            fi

      fi

;;


