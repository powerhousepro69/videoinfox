q)  # QUIT (DOWNLOAD LIST)
#####echo "$grabclip" | xclip -sel clip  # restore clipboard
#####pasteclip=$(xclip -o -selection clipboard 2> /dev/null)  # grab clipboard content
break;;


Z)  # CLEAR User Set List
