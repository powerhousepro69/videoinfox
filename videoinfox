   then
        cat ~/.config/videoinfox/tmp/videoinfo.number.play-list 2>/dev/null
        #dashit=$(echo -e "\033[5m-\033m\033[0m\033[5m\033[5m\033[0m")
        dashit=$(echo "~") #
