echo " to one directory." >> ~/.config/videoinfox/d-ch-help
echo >> ~/.config/videoinfox/d-ch-help
echo " * Download in Download Channel: Yt-dlp is directly processing the playlist." >> ~/.config/videoinfox/d-ch-help
echo >> ~/.config/videoinfox/d-ch-help
