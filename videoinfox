                      echo "$specifydir5" > ~/.config/videoinfox/videoinfo.downchan-dir
                      read -r dir5 < ~/.config/videoinfox/videoinfo.downchan-dir

                      if [ -f "$dir5/.videoinfox.dl-playlist" ]
                      then
                      :
                      else
                      echo > "$dir5/.videoinfox.dl-playlist"
                      fi

                      read -r dir5 2> /dev/null < ~/.config/videoinfox/videoinfo.downchan-dir # load the new dir
                      cp "$dir5/.videoinfox.dl-playlist" ~/.config/videoinfox/videoinfox.dl-playlist 2>/dev/null # load its playlists

                      echo " Download Channel Directory Set to:" "$dir5"
                      sleep 1

                  else
                      echo
                      echo " error: Directory doesn't exist"
                      sleep 1
