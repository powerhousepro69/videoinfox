do

   if [ -f "$line" ]
      then # ONLY WRITE LINE TO FILE IF IT IS A VALID PATH AND FILE
           echo "$line" >> ~/.config/videoinfox/tmp/videoinfo.playlist-apa2
      else
           :
   fi

done < "$input"
#  DONE WRITING ONLY VALID FILES

#  REMOVE BLANK LINES
